
= form_for @issue, html: {class: "form-horizontal"} do |f|
  .form-group
    .col-lg-2
      = f.label :topic
    - if @issue.errors.messages[:topic]
      .has-error
        .col-lg-6
          %p Topic cannot be empty
          = f.text_field :topic, class: "form-control"
    - else
      .col-lg-6
        = f.text_field :topic, class: "form-control"
  .form-group
    .col-lg-2
      = f.label :description
    .col-lg-6
      = f.text_area :description, class: "form-control"
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit 'Save', class: "btn btn-primary"
